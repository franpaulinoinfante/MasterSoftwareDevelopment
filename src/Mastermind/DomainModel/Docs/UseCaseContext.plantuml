@startuml UseCaseContext
state INITIAL
state IN_GAME
state OUT_GAME
state EXIT
state if_finished <<choice>>
state if_resumed <<choice>>

[*] --> INITIAL
INITIAL --> IN_GAME : Start
IN_GAME --> if_finished : Play
    if_finished --> IN_GAME
if_finished --> OUT_GAME
OUT_GAME --> if_resumed : Resume
    if_resumed --> INITIAL : [continue]
if_resumed --> EXIT
EXIT --> [*] 
@enduml